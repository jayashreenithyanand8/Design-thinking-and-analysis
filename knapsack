#include <iostream>
using namespace std;

int max(int a, int b)
{
    return (a > b) ? a : b;
}

int main()
{
    int n = 3; // number of items
    int weight[] = {10, 20, 30};
    int value[] = {60, 100, 120};
    int W = 50; // capacity of knapsack

    int dp[10][50];
    
    // build table dp[][]
    for(int i = 0; i <= n; i++)
    {
        for(int w = 0; w <= W; w++)
        {
            if(i == 0 || w == 0)
                dp[i][w] = 0;
            else if(weight[i-1] <= w)
                dp[i][w] = max(value[i-1] + dp[i-1][w-weight[i-1]], dp[i-1][w]);
            else
                dp[i][w] = dp[i-1][w];
        }
    }

    cout << "Maximum value = " << dp[n][W];

    return 0;
}
