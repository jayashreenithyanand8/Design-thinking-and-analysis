#include <iostream>
using namespace std;

int main()
{
    int arr[] = {2, 5, 8, 12, 16, 23, 38};
    int n = 7;
    int key = 16;

    int low = 0, high = n - 1;
    int mid;
    bool found = false;

    while(low <= high)
    {
        mid = (low + high) / 2;

        if(arr[mid] == key)
        {
            cout << "Element found at position " << mid;
            found = true;
            break;
        }
        else if(arr[mid] < key)
            low = mid + 1;
        else
            high = mid - 1;
    }

    if(!found)
        cout << "Element not found";

    return 0;
}
